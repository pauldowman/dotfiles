[user]
  name = Paul Dowman
  email = paul@pauldowman.com

[github]
  user = pauldowman

[color]
  diff = auto
  status = auto
  branch = auto
  sh = auto
  ui = true
  wtf = auto
[color "branch"]
  current = green reverse
  local = green
  remote = yellow
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
# [color "status"]
#   added = yellow
#   changed = green
#   untracked = cyan

[merge]
  log = true

[alias]
  c = commit -v
  a = add --all
  st = status -s
  changed = ! git status -s | awk '{print $2}' | xargs # use this like "git changed vim", which will open all changed files in vim
  co = checkout
  d = diff
  l = log --pretty=format:'%Cred%h%Creset %an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  lg = log --graph --pretty=format:'%Cred%h%Creset %an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  b = branch
  cleanup = ! git branch --merged | grep -v '*' | grep -v '^  master$' | xargs git branch -d
  push-new = ! git push -u origin `git rev-parse --abbrev-ref HEAD`
  pf = push --force-with-lease

[core]
  excludesfile = ~/.gitignore
  whitespace = trailing-space,space-before-tab
	commitGraph = true

[push]
	default = simple
[commit]
	gpgsign = true

[gpg]
  program = gpg

[diff]
	algorithm = patience
	noprefix = true
[protocol]
	version = 2
[gc]
	writeCommitGraph = true
[credential]
	helper = store --file ~/.git-credentials
[pull]
	rebase = true
[init]
	defaultBranch = main
