{
  "permissions": {
    "allow": [
      "Bash(*)",
      "Edit",
      "Write",
      "NotebookEdit",
      "Mcp:*",
      "Fetch(*)",
      "WebSearch"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/check-git.sh"
          }
        ]
      }
    ]
  }
}
